<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E293B" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Pulsing Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#3B82F6" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- Inner Glow -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#103B82F6"
                android:endColor="#001E293B"
                android:angle="45" />
            <corners android:radius="13dp" />
        </shape>
    </item>

</layer-list>