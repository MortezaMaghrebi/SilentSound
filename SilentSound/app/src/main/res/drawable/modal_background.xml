<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- سایه -->
    <item
        android:left="2dp"
        android:top="4dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- بک‌گراند اصلی -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1E394B"
                android:endColor="#2A4D63"
                android:angle="135" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#4060758A" />
        </shape>
    </item>

    <!-- هایلایت بالایی -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#30FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>