<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/modal_background"
        android:padding="20dp"
        android:elevation="8dp">

        <!-- آیکون VIP -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/premium_star"
            android:layout_marginBottom="16dp" />

        <!-- عنوان -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="محتوای ویژه"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/yekan"
            android:layout_marginBottom="8dp" />

        <!-- توضیحات -->
        <TextView
            android:id="@+id/modalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="به ترکیب های اختصاصی خواب دسترسی پیدا کنید\n24 ساعت رایگان با تماشای تبلیغ"
            android:textColor="#E2E8F0"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/yekan"
            android:layout_marginBottom="20dp" />

        <!-- دکمه خرید -->
        <Button
            android:id="@+id/btnPurchase"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="خرید اشتراک ویژه"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/modal_button_primary"
            android:fontFamily="@font/yekan"
            android:layout_marginBottom="12dp" />

        <!-- دکمه تماشای تبلیغ -->
        <Button
            android:id="@+id/btnWatchAd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="تماشای تبلیغ (24 ساعت رایگان)"
            android:textColor="#7Bb2F6"
            android:textSize="14sp"
            android:background="@drawable/modal_button_secondary"
            android:fontFamily="@font/yekan"
            android:layout_marginBottom="12dp" />

        <!-- دکمه انصراف -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="انصراف"
            android:textColor="#a4c3e8"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/yekan" />

    </LinearLayout>

</RelativeLayout>