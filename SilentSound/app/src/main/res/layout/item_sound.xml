<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:background="@drawable/sound_item_background"
    android:padding="5dp">

    <!-- Overlay for selection -->
    <View
        android:id="@+id/selectionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sound_item_selected_overlay"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound Name"
            android:textColor="#E2E8F0"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/yekan"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Progress Bar for Download -->
        <ProgressBar
            android:id="@+id/downloadProgressBar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
            android:progressTint="#3B82F6"
            android:background="#ffffff"
            style="@android:style/Widget.ProgressBar.Horizontal" />

        <TextView
            android:id="@+id/downloadProgressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#94A3B8"
            android:textSize="10sp"
            android:gravity="center"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#3B82F6"
            android:thumbTint="#3B82F6"
            android:minHeight="6dp" />

    </LinearLayout>

</RelativeLayout>