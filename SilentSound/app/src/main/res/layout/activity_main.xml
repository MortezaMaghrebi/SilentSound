<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- هدر -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_logo"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صدا‌ی سکوت"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تجربه مدیتیشن صوتی تعاملی"
                android:textColor="@color/light_blue"
                android:textSize="16sp"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- کنترل‌های اصلی -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/card_background">

                <!-- کنترل فرکانس -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="فرکانس پایه"
                        android:textColor="@color/light_blue"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/frequencySeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="320"
                        android:progress="120"
                        android:progressTint="@color/light_blue" />

                    <TextView
                        android:id="@+id/frequencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200 Hz"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_gravity="end" />
                </LinearLayout>

                <!-- کنترل حجم -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حجم صدا"
                        android:textColor="@color/light_blue"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/volumeSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/light_blue" />

                    <TextView
                        android:id="@+id/volumeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_gravity="end" />
                </LinearLayout>

                <!-- دکمه‌های کنترل -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/playButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="شروع"
                        android:textColor="@color/white"
                        android:background="@drawable/button_primary"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/stopButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="توقف"
                        android:textColor="@color/white"
                        android:background="@drawable/button_secondary"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- کتابخانه صوتی -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="موسیقی زمینه"
                    android:textColor="@color/light_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <GridView
                    android:id="@+id/musicGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="داستان‌های مدیتیشن"
                    android:textColor="@color/light_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp" />

                <GridView
                    android:id="@+id/storyGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- تایمر خودکار -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تایمر خودکار"
                    android:textColor="@color/light_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/timer5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="۵ دقیقه"
                        android:textSize="12sp"
                        android:background="@drawable/button_timer"
                        android:layout_margin="4dp" />

                    <Button
                        android:id="@+id/timer10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="۱۰ دقیقه"
                        android:textSize="12sp"
                        android:background="@drawable/button_timer"
                        android:layout_margin="4dp" />

                    <Button
                        android:id="@+id/timer15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="۱۵ دقیقه"
                        android:textSize="12sp"
                        android:background="@drawable/button_timer"
                        android:layout_margin="4dp" />

                    <Button
                        android:id="@+id/timer30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="۳۰ دقیقه"
                        android:textSize="12sp"
                        android:background="@drawable/button_timer"
                        android:layout_margin="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/timerDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>