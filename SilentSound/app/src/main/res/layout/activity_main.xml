<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="صداهای خواب"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#4080f0"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/timerSection"
        android:layout_margin="10dp"
        android:layout_below="@+id/tvTitle"
        android:background="@drawable/tablayout_background"
        >
        <!-- Tab Layout -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabLayout"
            android:paddingHorizontal="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tabNature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tab_background_selected"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/cave_96px"
                        android:layout_marginEnd="8dp"
                        app:tint="#3B82F6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="طبیعت"
                        android:textColor="#3B82F6"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tab_background"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/creek_96px"
                        android:layout_marginEnd="8dp"
                        app:tint="#64748B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="آهنگ‌ها"
                        android:textColor="#64748B"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabNoise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tab_background"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/creek_96px"
                        android:layout_marginEnd="8dp"
                        app:tint="#64748B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نویزها"
                        android:textColor="#64748B"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabWaves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tab_background"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_waves"
                        android:layout_marginEnd="8dp"
                        app:tint="#64748B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="موج‌ها"
                        android:textColor="#64748B"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabStories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tab_background"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/creek_96px"
                        android:layout_marginEnd="8dp"
                        app:tint="#64748B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="داستان ها"
                        android:textColor="#64748B"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabPresets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/tab_background"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_margin="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/creek_96px"
                        android:layout_marginEnd="8dp"
                        app:tint="#64748B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ترکیب ها"
                        android:textColor="#64748B"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- RecyclerView for Sounds -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/soundsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabLayout"
            android:layout_margin="5dp"
            android:clipToPadding="false" />

    </RelativeLayout>


    <!-- Timer Section -->
    <RelativeLayout
        android:id="@+id/timerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/playbackControls"
        android:background="@drawable/timerlayout_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تنظیمات زمان‌بندی"
            android:textColor="#3B82F6"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:drawablePadding="8dp"
            android:id="@+id/timerTitle"
            android:drawableStart="@drawable/ic_timer" />
        <TextView
            android:id="@+id/timerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="تایمر فعال: ندارد"
            android:textColor="#3B82F6"
            android:textSize="16sp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/timerTitle">

            <LinearLayout
                android:id="@+id/timerButtonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>



    </RelativeLayout>

    <!-- Playback Controls -->
    <LinearLayout
        android:id="@+id/playbackControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/playButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_primary"
            android:text="پخش همه ▶"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
           />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_stop"
            android:text="توقف همه ∎"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />

    </LinearLayout>

</RelativeLayout>